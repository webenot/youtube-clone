header.header
  .header__wrapper.container
    .header__column
      a(href="/")
        i.fab.fa-youtube
    .header__column
      form(action=routes.search, method="get")
        input(type="text", placeholder="Search by term...", name="term")
    .header__column
      ul
        if loggedUser
          li
            a(href=routes.videos + routes.upload) Upload video
          li
            a(href=routes.users + routes.profile) Profile
          li
            a(href=routes.logout) Log Out
        else
          li
            a(href=routes.join) Join
          li
            a(href=routes.login) Log In
