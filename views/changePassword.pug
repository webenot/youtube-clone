extends layouts/main
block content
  .form-container
    form(action=routes.users + routes.changePassword, method="post")
      input(type="password", name="oldPassword", placeholder="Old Password" required=true)
      input(type="password", name="password", placeholder="New Password" required=true)
      input(type="password", name="password2", placeholder="Verify Password" required=true)
      input(type="submit", value="Change Password")
