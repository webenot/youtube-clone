extends layouts/main
include mixins/videoBlock
block content
  .user-detail
    .user-detail__header
      if user.avatarUrl
        img.u-avatar(src=(user.avatarUrl.indexOf('http') !== 0 ? '/' : '') + user.avatarUrl, title=user.name)
      h4.user-detail__name= user.name
    if user.id === loggedUser.id
      .user-detail__btns
        a(href=routes.users + routes.editProfile)
          button(type="button") ðŸ–Š Edit Profile
        a(href=routes.users + routes.changePassword)
          button(type="button") ðŸ”’ Change Password
  .home-videos
    each video in user.videos
      +videoBlock(video)
