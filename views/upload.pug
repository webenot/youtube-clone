extends layouts/main
block content
  .form-container
    form(action=routes.videos + routes.upload, method="post", enctype="multipart/form-data")
      .fileUpload
        label(for="video") Video
        input#video(type="file", name="video" required=true, accept="video/*")
      input(type="text", name="title", placeholder="Title" required=true)
      textarea(name="description", placeholder="Description")
      input(type="submit", value="Upload Video")
